Listen 8773
<VirtualHost *:8773>
  WSGIScriptAlias / /var/lib/nova/nova-ec2.wsgi
  WSGIDaemonProcess ec2 user=nova group=nogroup processes=3 threads=10 python-path=/usr/share/pyshared/nova
  WSGIProcessGroup nova

  # SSL Config
  SSLEngine on
  SSLCertificateFile /etc/ssl/certs/dipstick02.rackspace.corp.crt
  SSLCertificateKeyFile /etc/ssl/private/dipstick02.rackspace.corp.key

  ErrorLog /var/log/nova/nova-ec2.log
  LogLevel warn
  CustomLog /var/log/nova/nova-ec2.log combined
</VirtualHost>

